/**index.wxss**/
page{
  background-color:#212026;
}
/* 轮播图 */
.advSwiper{
  width:100%;
  height:200px;
}
.advBox{
  width:100%;
}

.advImg{
  width:100%;
  height:200px;
}

.homeIcon{
  background-color: #fff;
  display: flex;
  width:100%;
  flex-wrap: nowrap;
  justify-content: space-between;
}

.iconItem{
  width:20%;
  padding:5px 0 10px 0;
}
.iconItem image{
  width:100%;
  max-height: 240rpx;
}
.iconItem label{
  width:100%;
  text-align: center;
  font-size:12px;
  display: block;
  margin-top:-5px;
}

/* 菜单按钮 */
.menu{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  padding:5px 15px;
  background-color:#1a1a1c;
  margin-bottom:15px;
}
.menuBtn{
  width:100%;
}
.menuBtn image{
  width:100%;
  height:60px;
}

/* 热租车型 */
.homeList .h2Title{
  margin-bottom:5px;
}