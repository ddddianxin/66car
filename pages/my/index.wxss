/* pages/my/index.wxss */
page{
  background-color:#212026;
}

/* 用户信息 */
.ucCard{
  background-color:#1a1a1c;
  padding:0 15px;
}
.top{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-around;
  padding:10px;
}
.selfie image{
  width:60px;
  height: 60px;
  border-radius: 100px;
}
.selfInfo{
  width:100%;
  padding:0 15px;
  color:#fff;
}
/* 菜单列表 */
.ucMenu{
  background-color:#1a1a1c;
  padding:0 15px;
  margin-top:15px;
}
.ucList{
  display: flex;
  flex-wrap:nowrap;
  justify-content: space-between;
  height:44px;
  line-height: 44px;
  color:#fff;
  font-size: 14px;
  border-bottom:1px solid #212026;
}
.ucList:last-child{
  border-bottom:none;
}

