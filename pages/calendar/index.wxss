/* pages/calendar/index.wxss */
page{
  background-color:#212026;
}
/* tab */
.tab{
  display: flex;
  flex-wrap: nowrap;
  justify-content: space-between;
  padding:0 15px;
}
.tabItem{
  width:48%;
  text-align: center;
  color:#fff;
  font-size: 14px;
  background-color:#1a1a1c;
  padding:5px 0;
  border:1px solid #1a1a1c;
  border-bottom:2px solid #1a1a1c;
}
.tabItem.active{
  border:1px solid #ffd98d;
  border-bottom:2px solid #ffd98d;
}
.tabTime{
  color:#ffd98d;
  font-size: 12px;
}